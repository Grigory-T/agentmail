[Unit]
Description=Encrypted Mail Server
After=network.target

[Service]
Type=simple
User=YOUR_USER
WorkingDirectory=/path/to/agentmail/server
ExecStart=/path/to/agentmail/server/venv/bin/python3 /path/to/agentmail/server/server.py
Restart=always
RestartSec=5
StandardOutput=append:/path/to/agentmail/server/server.log
StandardError=append:/path/to/agentmail/server/server.log

[Install]
WantedBy=multi-user.target
